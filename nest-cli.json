{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "entryFile": "apps/main",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      "**/*.hbs",
      {
        "include": "infra/datasets/airport-codes.json"
      }
    ],
    "watchAssets": true,
    "deleteOutDir": true
  }
}